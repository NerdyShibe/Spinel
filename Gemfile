# frozen_string_literal: true

source 'https://rubygems.org'

# Using the latest version of Ruby
ruby '3.4.4'

# Group gems that are only needed for development and testing.
# RSpec is a testing framework, so it belongs here.
group :development, :test do
  # RSpec is a meta-gem that includes rspec-core, rspec-expectations, and rspec-mocks.
  gem 'rspec', '~> 3.12'
  gem 'rubocop-rspec', '~> 3.6'
  gem 'ruby-lsp-rspec', require: false
end
